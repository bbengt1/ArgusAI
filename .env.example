# ArgusAI Docker Environment Configuration
# Copy this file to .env and configure for your deployment
# Story P10-2.3: Configure Docker Volumes and Environment

# ==============================================================================
# REQUIRED - Generate these before starting containers
# ==============================================================================

# Encryption Key for API key/password storage
# Generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# JWT Secret for authentication tokens
# Generate: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-here

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# SQLite (default - data stored in Docker volume)
DATABASE_URL=sqlite:///data/app.db

# PostgreSQL (use with --profile postgres)
# DATABASE_URL=postgresql://argusai:argusai@postgres:5432/argusai

# PostgreSQL credentials (when using --profile postgres)
POSTGRES_USER=argusai
POSTGRES_PASSWORD=argusai
POSTGRES_DB=argusai

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Debug mode (set to false in production)
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
# For Docker: use service names
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================

# Backend API URL (build-time variable for Next.js)
# For Docker Compose: use service name
NEXT_PUBLIC_API_URL=http://backend:8000

# WebSocket URL for real-time events
NEXT_PUBLIC_WS_URL=ws://backend:8000

# ==============================================================================
# SSL/HTTPS CONFIGURATION (use with --profile ssl)
# ==============================================================================

# Enable SSL (requires certificates in data/certs/)
SSL_ENABLED=false

# Certificate paths (relative to /app in container)
SSL_CERT_FILE=data/certs/cert.pem
SSL_KEY_FILE=data/certs/key.pem

# SSL settings
SSL_REDIRECT_HTTP=true
SSL_MIN_VERSION=TLSv1_2
SSL_PORT=443

# ==============================================================================
# AI PROVIDER API KEYS (Optional - configure providers you want to use)
# ==============================================================================

# OpenAI (GPT-4 Vision)
OPENAI_API_KEY=

# xAI (Grok Vision)
XAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# Google AI (Gemini)
GOOGLE_AI_API_KEY=

# ==============================================================================
# PUSH NOTIFICATIONS (Optional - requires HTTPS)
# ==============================================================================

# VAPID keys for Web Push notifications
# Generate: npx web-push generate-vapid-keys
VAPID_PRIVATE_KEY=
VAPID_PUBLIC_KEY=

# ==============================================================================
# HOMEKIT INTEGRATION (Optional)
# ==============================================================================

HOMEKIT_ENABLED=false
HOMEKIT_PORT=51826
HOMEKIT_BRIDGE_NAME=ArgusAI
# HOMEKIT_PINCODE=031-45-154  # Optional: Set specific pairing code

# ==============================================================================
# MQTT/HOME ASSISTANT INTEGRATION (Optional)
# ==============================================================================

MQTT_ENABLED=false
MQTT_BROKER_HOST=
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
